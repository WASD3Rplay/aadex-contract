{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDirs": [
      "./src",
    ],
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
  ]
}