{
  "jsxSingleQuote": false,
  "singleQuote": false,
  "trailingComma": "all",
  "arrowParens": "always",
  "tabWidth": 2,
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 120,
        "singleQuote": true,
        "bracketSpacing": false,
        "semi": true
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 88,
        "singleQuote": false,
        "bracketSpacing": true,
        "semi": false
      }
    }
  ],
  "importOrder": [
    "^([@]?)([a-zA-Z]+)([/]?)(.*)$",
    "^@/(.*)$",
    "^../(.*)",
    "^./(.*)"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ]
}